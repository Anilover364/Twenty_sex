<Window x:Class="Twenty_sex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twenty_sex"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize" PreviewKeyDown="Window_PreviewKeyDown"
        >
    <Grid>
        <GroupBox BorderThickness="0" Margin="-2,-2,0,0">
            <Grid Margin="-3,0,-6,-5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="29*"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="2" Grid.Row="1" BorderBrush="Red">
                    <Canvas x:Name="Polotno" />
                </Border>
                <Menu>
                    <MenuItem Header="Выбрать фигуру" FontSize="19">
                        <MenuItem Header="kvadratr" x:Name="Sqr" IsEnabled="False" Click="Click" />
                        <MenuItem Header="pencil no yayko" x:Name="Pen" Click="Click" />
                        <MenuItem Header="rossiya svachennaya nasha derjava" x:Name="RUS" Click="Click" />
                    </MenuItem>
                </Menu>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
